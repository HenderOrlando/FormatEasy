<div class="show-grid text-left">
    <div class="col-xs-6 col-sm-6 col-md-6">
        <h3 class="pull-left">Formato list</h3>
        <a href="{{ path('formato__new') }}" data-toggle="modal" href="#modal-link" class="link-ajax btn btn-primary btn-lg pull-right">
            Crear Formato
        </a>
    </div>
    <div class="col-xs-6 col-sm-6 col-md-6">
        <div class="btn-group form-buscar">
            <a href="{{ path('formato__new') }}" data-toggle="modal" href="#modal-link" class="link-ajax btn btn-primary btn-lg">Buscar</a>
            <input class="buscar form-control input-lg" name="search-formato" type="text">
        </div>
    </div>
</div>

<table class="records_list table table-responsive table-striped table-hover">
    <thead>
        <tr>
            {# <th>Id</th> #}
            <th rowspan="2">Nombre</th>
            <th rowspan="2">Descripcion</th>
            <th colspan="4">Margenes</th>
            <th rowspan="2">Actions</th>
        </tr>
        <tr>
            <th>sup</th>
            <th>inf</th>
            <th>izq</th>
            <th>der</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            {# <td><a href="{{ path('formato__show', { 'id': entity.id }) }}">{{ entity.id }}</a></td> #}
            <td>{{ entity.nombre }}</td>
            <td>{{ entity.descripcion }}</td>
            {# <td>{% if entity.fechaCreado %}{{ entity.fechaCreado|date('Y-m-d H:i:s') }}{% endif %}</td> #}
            <td>{{ entity.margensup }}</td>
            <td>{{ entity.margeninf }}</td>
            <td>{{ entity.margenizq }}</td>
            <td>{{ entity.margender }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('formato__show', { 'id': entity.id }) }}" class="btn btn-sm">show</a>
                    </li>
                    <li>
                        <a href="{{ path('formato__edit', { 'id': entity.id }) }}" class="btn btn-sm">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
