<form method="post" action="{{ url('formato__create') }}" class="edit-inline">
    <div class="hoja-config">
        <div class="btn btn-lg btn-success">Configurar</div>
        <div class="btn btn-lg btn-primary">Construir</div>
        <div class="btn btn-lg btn-info">Diseñar</div>
        <div class="form-hide">
            <div>
                <h3>
                    Configurar Plantillas
                </h3>
            </div>
            <div class="form-group">
                {{ form_label(form.PlantillaFormato, 'Plantilla Base') }}
                {{ form_errors(form.PlantillaFormato) }}
                {{ form_widget(form.PlantillaFormato, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="form-group">
                {{ form_label(form.plantillaPreguntas, 'Plantilla para las Preguntas?') }}
                {{ form_errors(form.plantillaPreguntas) }}
                {{ form_widget(form.plantillaPreguntas, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div>
                <h3>
                    Configurar Formato
                </h3>
            </div>
            <div class="form-group">
                {{ form_label(form.nombre, 'Título del formato') }}
                {{ form_errors(form.nombre) }}
                {{ form_widget(form.nombre, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="form-group">
                {{ form_label(form.descripcion, 'Descripción del Formato') }}
                {{ form_errors(form.descripcion) }}
                {{ form_widget(form.descripcion, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="text-center">
                <input type="submit" value="Guardar" class="btn btn-lg btn-primary"/>
            </div>
        </div>
    </div>
    <div class="hoja-sup">
        <div class="margen">
            {{ form_label(form.margen_sup, 'Márgen Superior') }}
            {{ form_errors(form.margen_sup) }}
            {{ form_widget(form.margen_sup) }}
        </div>
    </div>
    <div class="hoja-izq">
        <div class="margen">
            {{ form_label(form.margen_izq, 'Márgen Izquierdo') }}
            {{ form_errors(form.margen_izq) }}
            {{ form_widget(form.margen_izq) }}
        </div>
    </div>
    <div class="hoja-cont">
        
    </div>
    <div class="hoja-der">
        <div class="margen">
            {{ form_label(form.margen_der, 'Márgen derecho') }}
            {{ form_errors(form.margen_der) }}
            {{ form_widget(form.margen_der) }}
        </div>
    </div>
    <div class="hoja-inf">
        <div class="margen">
            {{ form_label(form.margen_inf, 'Márgen Inferior') }}
            {{ form_errors(form.margen_inf) }}
            {{ form_widget(form.margen_inf) }}
        </div>
    </div>
    <div id="unidad">
        {{ form_label(form.unidadMargen, 'Unidad del Márgen (mm, cm)') }}
        {{ form_errors(form.unidadMargen) }}
        {{ form_widget(form.unidadMargen) }}
    </div>
    {#<div>
        {{ form_label(form.etiquetas) }}
        {{ form_errors(form.etiquetas) }}
        {{ form_widget(form.etiquetas) }}
    </div>#}
    <div>
        {{ form_label(form._token) }}
        {{ form_errors(form._token) }}
        {{ form_widget(form._token) }}
    </div>
</form>
    {#<h1>Formato creation</h1>#}

    {#{ form(form) }#}

