<div class="show-grid text-left">
    <div class="col-xs-6 col-sm-6 col-md-6">
        <h3 class="pull-left">Respuesta list</h3>
        <a href="{{ path('respuesta__new') }}" data-toggle="modal" href="#modal-link" class="link-modal btn btn-primary btn-lg pull-right">
            Crear Respuesta
        </a>
    </div>
    <div class="col-xs-6 col-sm-6 col-md-6">
        <div class="btn-group form-buscar">
            <a href="{{ path('respuesta__new') }}" data-toggle="modal" href="#modal-link" class="link-modal btn btn-primary btn-lg">Buscar</a>
            <input class="buscar form-control input-lg" name="search-respuesta" type="text">
        </div>
    </div>
</div>

<table class="records_list">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Descripcion</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            {# <td><a href="{{ path('respuesta__show', { 'id': entity.id }) }}">{{ entity.id }}</a></td> #}
            <td>{{ entity.nombre }}</td>
            <td>{{ entity.descripcion }}</td>
            {# <td>{% if entity.fechaCreado %}{{ entity.fechaCreado|date('Y-m-d H:i:s') }}{% endif %}</td> #}
            <td>
            <ul>
                <li>
                    <a href="{{ path('respuesta__show', { 'id': entity.id }) }}" class="link-ajax btn btn-sm">show</a>
                </li>
                <li>
                    <a href="{{ path('respuesta__edit', { 'id': entity.id }) }}" class="link-ajax btn btn-sm">edit</a>
                </li>
            </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>