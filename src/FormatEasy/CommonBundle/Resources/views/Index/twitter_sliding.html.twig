{% if pageCount > 1 %}
    <ul class="pagination">
    {% if first is defined and current != first %}
        <li class="first">
            <a href="{{ path(route, query|merge({(pageParameterName): first})) }}">
                <span class="glyphicon glyphicon-fast-backward"></span>
            </a>
        </li>
    {% else %}
        <li class="disabled">
            <span class="glyphicon glyphicon-fast-backward"></span>
        </li>
    {% endif %}
    {% if previous is defined %}
        <li>
            <a href="{{ path(route, query|merge({(pageParameterName): previous})) }}">
                <span class="glyphicon glyphicon-backward">
                    <span>{{ 'anterior'|trans }}</span>
                </span>
            </a>
        </li>
    {% else %}
        <li class="disabled">
            <span class="glyphicon glyphicon-backward">
                <span>{{ 'anterior'|trans }}</span>
            </span>
        </li>
    {% endif %}

    {% if startPage > 1 %}
        <li>
            <a href="{{ path(route, query|merge({(pageParameterName): 1})) }}">1</a>
        </li>
        {% if startPage == 3 %}
            <li>
                <a href="{{ path(route, query|merge({(pageParameterName): 2})) }}">2</a>
            </li>
        {% elseif startPage != 2 %}
        <li class="disabled">
            <span>&hellip;</span>
        </li>
        {% endif %}
    {% endif %}

    {% for page in pagesInRange %}
        {% if page != current %}
            <li>
                <a href="{{ path(route, query|merge({(pageParameterName): page})) }}">{{ page }}</a>
            </li>
        {% else %}
            <li class="active">
                <span>{{ page }}</span>
            </li>
        {% endif %}

    {% endfor %}

    {% if pageCount > endPage %}
        {% if pageCount > (endPage + 1) %}
            {% if pageCount > (endPage + 2) %}
                <li class="disabled">
                    <span>&hellip;</span>
                </li>
            {% else %}
                <li>
                    <a href="{{ path(route, query|merge({(pageParameterName): (pageCount - 1)})) }}">{{ pageCount -1 }}</a>
                </li>
            {% endif %}
        {% endif %}
        <li>
            <a href="{{ path(route, query|merge({(pageParameterName): pageCount})) }}">{{ pageCount }}</a>
        </li>
    {% endif %}

    {% if next is defined %}
        <li>
            <a href="{{ path(route, query|merge({(pageParameterName): next})) }}">
                <span class="glyphicon glyphicon-forward">
                    <span>{{ 'siguiente'|trans }}</span>
                </span>
            </a>
        </li>
    {% else %}
        <li class="disabled">
            <span class="glyphicon glyphicon-forward">
                <span>{{ 'siguiente'|trans }}</span>
            </span>
        </li>
    {% endif %}
    {% if last is defined and current != last %}
        <li class="last">
            <a href="{{ path(route, query|merge({(pageParameterName): last})) }}">
                <span class="glyphicon glyphicon-fast-forward"></span>
            </a>
        </li>
    {% else %}
        <li class="disabled">
            <span class="glyphicon glyphicon-fast-forward"></span>
        </li>
    {% endif %}
    </ul>
{% endif %}
