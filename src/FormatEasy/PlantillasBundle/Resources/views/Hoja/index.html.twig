{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Hoja list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Canonical</th>
                <th>Descripcion</th>
                <th>Fechacreado</th>
                <th>Orientacion</th>
                <th>Ancho</th>
                <th>Alto</th>
                <th>Unidad</th>
                <th>Margen_sup</th>
                <th>Margen_inf</th>
                <th>Margen_izq</th>
                <th>Margen_der</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('hoja__show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.nombre }}</td>
                <td>{{ entity.canonical }}</td>
                <td>{{ entity.descripcion }}</td>
                <td>{% if entity.fechaCreado %}{{ entity.fechaCreado|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.orientacion }}</td>
                <td>{{ entity.ancho }}</td>
                <td>{{ entity.alto }}</td>
                <td>{{ entity.unidad }}</td>
                <td>{{ entity.margensup }}</td>
                <td>{{ entity.margeninf }}</td>
                <td>{{ entity.margenizq }}</td>
                <td>{{ entity.margender }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('hoja__show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('hoja__edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('hoja__new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
