
<div class="show-grid">
    <div class="col-xs-6 col-sm-6 col-md-6">
        <div class="btn-group">
            <a data-link="{{ path('hoja__new') }}" data-toggle="modal" href="#modal-link" class="link-modal btn btn-primary btn-lg">Crear Hoja</a>
            <a data-link="{{ path('hoja__new') }}" data-toggle="modal" href="#modal-link" class="link-modal btn btn-primary btn-lg">Buscar</a>
        </div>
    </div>
    <div class="col-xs-6 col-sm-6 col-md-6">
        <h1>Hoja list</h1>
    </div>
</div>
<table class="records_list table table-responsive table-striped table-hover">
    <thead>
        <tr>
            {# <th>Id</th> #}
            <th rowspan="2">Nombre</th>
            <th rowspan="2">Orientacion</th>
            <th rowspan="2">Ancho</th>
            <th rowspan="2">Alto</th>
            <th colspan="4">Margenes</th>
            <th rowspan="2">Actions</th>
        </tr>
        <tr>
            <th>sup</th>
            <th>inf</th>
            <th>izq</th>
            <th>der</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            {# <td><a href="{{ path('hoja__show', { 'id': entity.id }) }}">{{ entity.id }}</a></td> #}
            <td>{{ entity.nombre }}</td>
            {# <td>{% if entity.fechaCreado %}{{ entity.fechaCreado|date('Y-m-d H:i:s') }}{% endif %}</td> #}
            <td>{{ entity.orientacion }}</td>
            <td>{{ entity.ancho }}</td>
            <td>{{ entity.alto }}</td>
            <td>{{ entity.margensup }}</td>
            <td>{{ entity.margeninf }}</td>
            <td>{{ entity.margenizq }}</td>
            <td>{{ entity.margender }}</td>
            <td>
            <ul>
                <li>
                    <a href="{{ path('hoja__show', { 'id': entity.id }) }}">show</a>
                </li>
                <li>
                    <a href="{{ path('hoja__edit', { 'id': entity.id }) }}">edit</a>
                </li>
            </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
